<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleu_fonce">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="382dp"
        android:layout_height="300dp"

        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/box" />

    <TextView
        android:id="@+id/tv_titre_niveau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/montserrat_bold"
        android:padding="8dp"
        android:text="Niveau X"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titre_niveau"
        app:srcCompat="@drawable/level1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="383dp"
        android:layout_height="280dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/b_rep_1"
            android:layout_width="171dp"
            android:layout_height="114dp"
            android:backgroundTint="@color/bleu_clair"
            android:fontFamily="@font/montserrat_bold"
            android:text="Bouton réponse 1"
            android:textSize="24sp"
            android:background="@drawable/box"
            app:layout_constraintBottom_toTopOf="@+id/b_rep_3"
            app:layout_constraintEnd_toStartOf="@+id/b_rep_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/b_rep_2"
            android:layout_width="162dp"
            android:layout_height="113dp"
            android:backgroundTint="@color/bleu_clair"
            android:fontFamily="@font/montserrat_bold"
            android:text="Bouton réponse 2"

            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/b_rep_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/b_rep_1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b_rep_3"
            android:layout_width="163dp"
            android:layout_height="114dp"
            android:backgroundTint="@color/bleu_clair"
            android:fontFamily="@font/montserrat_bold"
            android:text="Bouton réponse 3"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/b_rep_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b_rep_1" />

        <Button
            android:id="@+id/b_rep_4"
            android:layout_width="161dp"
            android:layout_height="111dp"
            android:backgroundTint="@color/bleu_clair"
            android:fontFamily="@font/montserrat_bold"
            android:text="Bouton réponse 4"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/b_rep_3"
            app:layout_constraintTop_toBottomOf="@+id/b_rep_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_question_q4rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Voici une question ?"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titre_niveau" />

</androidx.constraintlayout.widget.ConstraintLayout>