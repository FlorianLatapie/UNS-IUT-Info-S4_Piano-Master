<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleu_fonce">

    <View
        android:id="@+id/fond_question_q4rep"
        android:layout_width="385dp"
        android:layout_height="290dp"
        android:background="@drawable/box"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="@+id/iv_question_q4rep"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/iv_question_q4rep"
        app:layout_constraintTop_toBottomOf="@+id/tv_titre_niveau_q4rep"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/tv_titre_niveau_q4rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Niveau X"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressQuestion"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="102dp"
        android:layout_height="69dp"

        android:background="@drawable/background_circle"
        android:progress="50"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="@+id/tv_titre_niveau_q4rep"
        app:layout_constraintEnd_toStartOf="@+id/tv_titre_niveau_q4rep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_titre_niveau_q4rep" />

    <TextView
        android:id="@+id/tv_num_question_q4rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/montserrat_bold"
        android:text="X/4"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/progressQuestion"
        app:layout_constraintEnd_toEndOf="@+id/progressQuestion"
        app:layout_constraintStart_toStartOf="@+id/progressQuestion"
        app:layout_constraintTop_toTopOf="@+id/progressQuestion" />

    <TextView
        android:id="@+id/tv_score_q4rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="X/4 points"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_titre_niveau_q4rep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_titre_niveau_q4rep"
        app:layout_constraintTop_toTopOf="@+id/tv_titre_niveau_q4rep" />

    <ImageView
        android:id="@+id/iv_question_q4rep"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fond_question_q4rep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/lvl1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="385dp"
        android:layout_height="270dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/b_rep_1"
            android:layout_width="175dp"
            android:layout_height="115dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/montserrat_bold"
            android:text="Bouton réponse 1"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/b_rep_3"
            app:layout_constraintEnd_toStartOf="@+id/b_rep_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/b_rep_2"
            android:layout_width="175dp"
            android:layout_height="115dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/montserrat_bold"
            android:text="Bouton réponse 2"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/b_rep_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/b_rep_1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b_rep_3"
            android:layout_width="175dp"
            android:layout_height="115dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/montserrat_bold"
            android:text="Bouton réponse 3"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/b_rep_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b_rep_1" />

        <Button
            android:id="@+id/b_rep_4"
            android:layout_width="175dp"
            android:layout_height="115dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/montserrat_bold"
            android:text="Bouton réponse 4"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/b_rep_3"
            app:layout_constraintTop_toBottomOf="@+id/b_rep_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_question_q4rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Voici une question ?"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titre_niveau_q4rep"
        app:layout_constraintTop_toTopOf="@+id/fond_question_q4rep" />

</androidx.constraintlayout.widget.ConstraintLayout>